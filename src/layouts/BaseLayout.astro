---
import HeaderPremium from '../components/nav/HeaderPremium.astro';
import FooterPremium from '../components/nav/FooterPremium.astro';
import ScrollToTop from '../components/ui/ScrollToTop.astro';
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  lang?: 'es' | 'en';
}

const { title, description, lang = 'es' } = Astro.props;

// Configuración de navegación por idioma
const navItems = lang === 'es' 
  ? [
      { label: 'Inicio', href: '#inicio' },
      { label: 'Funciones', href: '#funciones' },
      { label: 'Productos', href: '#productos' },
      { label: 'Contacto', href: '#contacto' },
    ]
  : [
      { label: 'Home', href: '#home' },
      { label: 'Features', href: '#features' },
      { label: 'Products', href: '#products' },
      { label: 'Contact', href: '#contact' },
    ];

---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Quantix Software</title>
    
    <!-- View Transitions para navegación SPA-like suave -->
    <ViewTransitions />
  </head>
  <body>
    <HeaderPremium navItems={navItems} />
    
    <main>
      <slot />
    </main>

    <FooterPremium navItems={navItems} />
    
    <!-- Premium Floating "Back to Top" Button -->
    <ScrollToTop />
  </body>
</html>
