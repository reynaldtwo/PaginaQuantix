---
import ProductLayout from '../../../layouts/ProductLayout.astro';
import HeroSection from '../../../components/sections/HeroSection.astro';
import CapabilitiesGrid from '../../../components/sections/CapabilitiesGrid.astro';

import ContactSection from '../../../components/sections/ContactSection.astro';
import Container from '../../../components/ui/Container.astro';
import Card from '../../../components/ui/Card.astro';
import Button from '../../../components/ui/Button.astro';

---

<ProductLayout 
    title="Quantix - ERP Software" 
    description="The integral solution for your business management."
    lang="en"
>
    <!-- Product Hero -->
    <HeroSection 
        id="hero"
        title="Quantix ERP"
        subtitle="Total control over your operations, finances, and resources in a single unified platform."
    />

    <!-- Overview / Screenshots -->
    <section class="section-padding">
        <Container>
            <div class="text-center mb-12">
                <h2>General Vision</h2>
                <p class="text-muted max-w-2xl mx-auto">
                    Quantix integrates all your company departments so information flows without barriers.
                </p>
            </div>
            
            <div class="visual-placeholder large">
               <span>Insert Image Here (Dashboard Screenshot)</span>
            </div>
        </Container>
    </section>

    <!-- Key Features -->
    <CapabilitiesGrid 
        id="features"
        title="Key Features"
        description="Powerful tools for intelligent decisions."
    />

    <!-- Pricing (Solo en producto) -->
    <section id="pricing" class="section-padding bg-surface-2">
        <Container>
            <div class="text-center mb-12">
                <h2>Plans & Pricing</h2>
                <p class="text-muted">Scale with us.</p>
            </div>
            
            <div class="pricing-grid">
                <!-- Plan Basic -->
                <Card class="pricing-card">
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2">Startup</h3>
                        <div class="price mb-4">Contact Us</div>
                        <ul class="features-list">
                            <li>Limited Users</li>
                            <li>Basic Modules</li>
                            <li>Email Support</li>
                        </ul>
                        <Button variant="secondary" class="w-full mt-6">Request Demo</Button>
                    </div>
                </Card>
                
                <!-- Plan Pro -->
                <Card class="pricing-card border-primary">
                    <div class="p-6">
                        <div class="badge-featured">Recommended</div>
                        <h3 class="text-xl font-bold mb-2">Enterprise</h3>
                        <div class="price mb-4">Custom</div>
                        <ul class="features-list">
                            <li>Unlimited Users</li>
                            <li>All Modules</li>
                            <li>24/7 Support</li>
                        </ul>
                        <Button variant="primary" class="w-full mt-6">Contact Sales</Button>
                    </div>
                </Card>
            </div>
        </Container>
    </section>

    <ContactSection
        id="contact"
        title="Ready to start?"
        description="Request a personalized demo today."
    />
</ProductLayout>

<style>
    .section-padding { padding: var(--space-12) 0; }
    .text-center { text-align: center; }
    .mb-12 { margin-bottom: var(--space-12); }
    .text-muted { color: var(--text-muted); }
    .max-w-2xl { max-width: 42rem; }
    .mx-auto { margin-left: auto; margin-right: auto; }
    .bg-surface-2 { background-color: var(--surface-2); }
    .w-full { width: 100%; }
    .mt-6 { margin-top: var(--space-6); }
    .p-6 { padding: var(--space-6); }
    
    .visual-placeholder {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        aspect-ratio: 16/9;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-muted);
    }
    
    .pricing-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-8);
        max-width: 800px;
        margin: 0 auto;
    }
    
    @media (min-width: 768px) {
        .pricing-grid { grid-template-columns: 1fr 1fr; }
    }
    
    .price {
        font-size: var(--text-3xl);
        font-weight: 700;
        color: var(--text);
    }
    
    .features-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: var(--space-2);
        color: var(--text-muted);
    }
    
    .border-primary {
        border-color: var(--primary);
        box-shadow: var(--shadow-lg);
    }
    
    .badge-featured {
        background: var(--primary);
        color: white;
        font-size: var(--text-xs);
        padding: 4px 8px;
        border-radius: var(--radius-full);
        display: inline-block;
        margin-bottom: var(--space-2);
    }
</style>
