---
import ProductLayout from '../../../layouts/ProductLayout.astro';
import HeroSection from '../../../components/sections/HeroSection.astro';

import ContactSection from '../../../components/sections/ContactSection.astro';
import Container from '../../../components/ui/Container.astro';
import Card from '../../../components/ui/Card.astro';
import Button from '../../../components/ui/Button.astro';

---

<ProductLayout 
    title="Nica Payroll - Payroll & HR" 
    description="Automate your payroll and comply with Nicaraguan law."
    lang="en"
>
    <!-- Product Hero -->
    <HeroSection 
        id="hero"
        title="Nica Payroll"
        subtitle="The easiest and most precise way to manage your payroll in Nicaragua."
    />

    <!-- Overview -->
    <section class="section-padding">
        <Container>
            <div class="text-center mb-12">
                <h2>100% Adapted to Law</h2>
                <p class="text-muted max-w-2xl mx-auto">
                    INSS, IR, vacation, and severance calculations updated automatically.
                </p>
            </div>
            
            <div class="visual-placeholder large">
               <span>Insert Image Here (Payroll Interface)</span>
            </div>
        </Container>
    </section>

    <!-- Pricing -->
    <section id="pricing" class="section-padding bg-surface-2">
        <Container>
            <div class="text-center mb-12">
                <h2>Flexible Plans</h2>
                <p class="text-muted">Pay only for what you use.</p>
            </div>
            
            <div class="pricing-grid">
                <Card class="pricing-card">
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2">SMBs</h3>
                        <div class="price mb-4">$XX / mo</div>
                        <ul class="features-list">
                            <li>Up to 15 employees</li>
                            <li>Automatic calculations</li>
                            <li>Export to DGI</li>
                        </ul>
                        <Button variant="secondary" class="w-full mt-6">Start Now</Button>
                    </div>
                </Card>
                
                <Card class="pricing-card border-primary">
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2">Corporate</h3>
                        <div class="price mb-4">Custom</div>
                        <ul class="features-list">
                            <li>Unlimited employees</li>
                            <li>Employee portal</li>
                            <li>API Access</li>
                        </ul>
                        <Button variant="primary" class="w-full mt-6">Contact Us</Button>
                    </div>
                </Card>
            </div>
        </Container>
    </section>

    <ContactSection
        id="contact"
        title="Questions about payroll?"
        description="Our experts are ready to help you."
    />
</ProductLayout>

<style>
    .section-padding { padding: var(--space-12) 0; }
    .text-center { text-align: center; }
    .mb-12 { margin-bottom: var(--space-12); }
    .text-muted { color: var(--text-muted); }
    .max-w-2xl { max-width: 42rem; }
    .mx-auto { margin-left: auto; margin-right: auto; }
    .bg-surface-2 { background-color: var(--surface-2); }
    .w-full { width: 100%; }
    .mt-6 { margin-top: var(--space-6); }
    .p-6 { padding: var(--space-6); }
    
    .visual-placeholder {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        aspect-ratio: 16/9;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-muted);
    }
    
    .pricing-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-8);
        max-width: 800px;
        margin: 0 auto;
    }
    
    @media (min-width: 768px) {
        .pricing-grid { grid-template-columns: 1fr 1fr; }
    }
    
    .price {
        font-size: var(--text-3xl);
        font-weight: 700;
        color: var(--text);
    }
    
    .features-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: var(--space-2);
        color: var(--text-muted);
    }
    
    .border-primary {
        border-color: var(--primary);
        box-shadow: var(--shadow-lg);
    }
</style>
