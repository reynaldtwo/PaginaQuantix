---
interface Props {
  variant?: 'primary' | 'accent' | 'outline' | 'surface';
  class?: string;
}

const { variant = 'primary', class: className } = Astro.props;
---

<span class:list={['badge', `badge--${variant}`, className]}>
  <slot />
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-md); /* Consistent small rounding */
    font-size: var(--text-xs);
    font-weight: 600;
    line-height: 1;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .badge--primary {
    background-color: var(--primary-soft);
    color: var(--primary);
  }

  .badge--accent {
    background-color: var(--accent-soft);
    color: var(--accent-hover);
  }

  .badge--outline {
    background-color: transparent;
    border: 1px solid var(--border);
    color: var(--text-muted);
  }

  .badge--surface {
    background-color: var(--surface-2);
    color: var(--text);
  }
</style>
