---
import Container from "../ui/Container.astro";
import Button from "../ui/Button.astro";

interface Props {
  id: string; // Para anclaje
  title: string;
  subtitle: string;
  lang?: "es" | "en";
}

const { id, title, subtitle, lang = "es" } = Astro.props;

// Language-aware button configuration
const ctaContact = {
  href: lang === "es" ? "#contacto" : "#contact",
  label: lang === "es" ? "Contactar" : "Contact Us",
};

const ctaProducts = {
  href: lang === "es" ? "#productos" : "#products",
  label: lang === "es" ? "Ver Productos" : "View Products",
};
---

<section id={id} class="hero-section">
  <!-- Video Background -->
  <div class="video-background">
    <video
      autoplay
      loop
      muted
      playsinline
      poster="/images/hero-poster.jpg"
      class="hero-video"
    >
      <source src="/videos/hero.mp4" type="video/mp4" />
      <!-- Fallback or additional formats if needed -->
    </video>
    <div class="video-overlay"></div>
  </div>

  <Container class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">{title}</h1>
      <p class="hero-subtitle">{subtitle}</p>

      <div class="hero-actions">
        <Button href={ctaContact.href} size="lg" variant="glass"
          >{ctaContact.label}</Button
        >
        <Button href={ctaProducts.href} size="lg" variant="glass"
          >{ctaProducts.label}</Button
        >
      </div>
    </div>
  </Container>
</section>

<style>
  .hero-section {
    position: relative;
    /* Full viewport height for impact */
    height: 100vh;
    min-height: 700px;
    width: 100%;
    display: flex;
    align-items: center;
    overflow: hidden;
    /* Force dark theme context for this section regardless of global theme */
    color: #ffffff;
  }

  .video-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Luxury radial overlay: light center, black edges */
    background: radial-gradient(
      circle at 50% 50%,
      rgba(15, 23, 42, 0.4) 0%,
      rgba(2, 6, 23, 0.95) 100%
    );
    z-index: 1;
  }

  .hero-container {
    position: relative;
    z-index: 10;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center; /* Center for more impact */
    text-align: center;
  }

  .hero-content {
    max-width: 900px;
    animation: fadeInUp 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .hero-section {
    position: relative;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
    background-color: #020617;
    padding-top: 80px; /* Offset for header */
  }

  @media (min-width: 1024px) {
    .hero-section {
      padding-top: 0;
    }
  }

  .hero-title {
    font-size: clamp(2.25rem, 10vw, 5.5rem); /* Smaller min for mobile */
    line-height: 1.1;
    font-weight: 900;
    letter-spacing: -0.05em;
    margin-bottom: var(--space-6);
    background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.3));
  }

  .hero-subtitle {
    font-size: clamp(1rem, 3vw, 1.5rem);
    line-height: 1.6;
    color: rgba(226, 232, 240, 0.9);
    margin-bottom: var(--space-10);
    max-width: 55ch;
    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
    padding: 0 var(--space-4);
  }

  .hero-actions {
    display: flex;
    flex-direction: column; /* Stack on mobile */
    gap: var(--space-4);
    justify-content: center;
    align-items: center;
    padding: 0 var(--space-4);
  }

  @media (min-width: 640px) {
    .hero-actions {
      flex-direction: row;
      gap: var(--space-6);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  function setupHeroParallax() {
    const hero = document.querySelector(".hero-section");
    const bg = document.querySelector(".video-background");

    if (!hero || !bg) return;

    window.addEventListener("scroll", () => {
      const scrollY = window.scrollY;
      const heroHeight = hero.getBoundingClientRect().height;
      if (scrollY <= heroHeight) {
        // Move background slower for parallax effect
        (bg as HTMLElement).style.transform = `translateY(${scrollY * 0.4}px)`;
      }
    });
  }

  setupHeroParallax();
  document.addEventListener("astro:page-load", setupHeroParallax);
</script>
