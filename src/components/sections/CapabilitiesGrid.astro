---
import Container from '../ui/Container.astro';
import Card from '../ui/Card.astro';

interface Props {
  id: string;
  title: string;
  description: string;
}

const { id, title, description } = Astro.props;

// Placeholder features - en un caso real podrían venir por props o config
const features = [
  { 
    title: "Software a Medida", 
    desc: "Creamos ecosistemas digitales escalables y de alto rendimiento adaptados a tu modelo de negocio.",
    image: "/images/funcion1.jpg"
  },
  { 
    title: "Automatización RPA", 
    desc: "Optimizamos tus procesos operativos eliminando tareas repetitivas con bots de inteligencia avanzada.",
    image: "/images/funcion2.jpg"
  },
  { 
    title: "Infraestructura Cloud", 
    desc: "Migración y gestión de entornos en la nube con máxima seguridad y disponibilidad 24/7.",
    image: "/images/funcion3.jpg"
  },
  { 
    title: "Consultoría Tech", 
    desc: "Transformamos retos complejos en soluciones técnicas eficientes mediante arquitectura de software proactiva.",
    image: "/images/funcion4.jpg"
  },
];
---

<section id={id} class="features-section">
  <!-- Background Decoration -->
  <div class="background-decor">
    <div class="dot-matrix"></div>
    <div class="radial-glow"></div>
  </div>

  <Container>
    <div class="section-header">
      <h2 class="section-title">{title}</h2>
      <p class="section-desc">{description}</p>
    </div>

    <div class="features-grid">
      {features.map(feature => (
        <div class="feature-card">
          <div class="card-bg" style={`background-image: url(${feature.image})`}></div>
          <div class="card-overlay"></div>
          
          <!-- Premium Border Glow -->
          <div class="card-border"></div>
          
          <div class="card-content">
            <h3 class="feature-title">{feature.title}</h3>
            <p class="feature-desc">{feature.desc}</p>
          </div>
        </div>
      ))}
    </div>
  </Container>

  <!-- Bottom Section Separator -->
  <div class="section-separator"></div>
</section>

<style>
  .features-section {
    position: relative;
    padding: var(--space-32) 0 var(--space-40);
    transition: background-color 0.3s ease;
    overflow: hidden;
  }

  /* Decorative elements */
  .background-decor {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .dot-matrix {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px);
    background-size: 32px 32px;
    opacity: 0.5;
  }

  :global([data-theme="light"]) .dot-matrix {
    background-image: radial-gradient(rgba(0, 0, 0, 0.05) 1px, transparent 1px);
  }

  .radial-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, var(--primary-soft) 0%, transparent 70%);
    opacity: 0.1;
  }

  .section-separator {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(to right, transparent, var(--border), transparent);
  }

  :global([data-theme="dark"]) .section-separator {
    background: linear-gradient(to right, transparent, rgba(255, 255, 255, 0.1), transparent);
  }

  /* Theme adjustments */
  :global([data-theme="light"]) .features-section {
    background-color: #f8fafc;
  }

  :global([data-theme="dark"]) .features-section {
    background-color: var(--bg);
  }

  .section-header {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--space-16);
  }

  .section-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    margin-bottom: var(--space-4);
    letter-spacing: -0.03em;
  }

  :global([data-theme="light"]) .section-title {
    color: #1e3a8a;
  }

  /* Grid Layout */
  .features-grid {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
  }

  @media (min-width: 640px) {
    .features-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (min-width: 1024px) {
    .features-grid { grid-template-columns: repeat(4, 1fr); gap: var(--space-6); }
  }

  /* Card Premium Look */
  .feature-card {
    position: relative;
    height: 480px;
    border-radius: var(--radius-xl);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: var(--space-8);
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    background: #000; /* Base for contrast */
  }

  @media (max-width: 639px) {
    .feature-card {
      height: 380px; /* More compact on mobile */
      padding: var(--space-6);
    }
    
    .features-section {
      padding: var(--space-16) 0;
    }
  }

  /* Glass Glow Border */
  .card-border {
    position: absolute;
    inset: 0;
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-xl);
    pointer-events: none;
    z-index: 4;
    transition: all 0.5s ease;
  }

  .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .feature-card:hover .card-border {
    border-color: var(--primary);
    box-shadow: inset 0 0 15px rgba(var(--primary-rgb), 0.2);
  }

  .card-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 1;
  }

  .card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top, 
      rgba(0, 0, 0, 0.9) 0%, 
      rgba(0, 0, 0, 0.2) 50%, 
      transparent 100%
    );
    z-index: 2;
    transition: background 0.5s ease;
  }

  .feature-card:hover .card-bg {
    transform: scale(1.15);
  }

  .feature-card:hover .card-overlay {
    background: linear-gradient(
      to top, 
      rgba(0, 0, 0, 0.95) 0%, 
      rgba(0, 0, 0, 0.6) 60%, 
      transparent 100%
    );
  }

  .card-content {
    position: relative;
    z-index: 3;
    transition: transform 0.4s ease;
  }

  .feature-title {
    font-size: var(--text-xl);
    font-weight: 700;
    color: white;
    margin-bottom: var(--space-2);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .feature-desc {
    font-size: var(--text-base);
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.6;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    max-height: 0;
    overflow: hidden;
  }

  .feature-card:hover .feature-desc {
    opacity: 1;
    transform: translateY(0);
    max-height: 180px;
    margin-top: var(--space-3);
  }
</style>
</style>
